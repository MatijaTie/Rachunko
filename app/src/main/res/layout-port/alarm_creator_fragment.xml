<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/materialcolorpicker__white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/alarm_fragment_img"
        android:layout_width="97dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/menu"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="126dp"
        app:layout_constraintHorizontal_bias="0.501" />

    <EditText
        android:id="@+id/alarm_framgent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Title"
        android:textAlignment="center"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarm_fragment_img"
        app:layout_constraintHorizontal_bias="0.502" />

    <EditText
        android:id="@+id/alarm_fragment_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:hint="Text"
        android:textAlignment="center"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarm_framgent_title" />

    <DatePicker
        android:id="@+id/alarm_fragment_datePicker"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_width="0dp"
        android:layout_marginBottom="15dp"
        android:layout_height="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/alarm_fragment_text" />

    <TimePicker
        android:id="@+id/alarm_fragment_timePicker"
        android:layout_width="0dp"
        android:layout_height="140dp"

        android:timePickerMode="spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/alarm_fragment_datePicker" />

    <Button
        android:id="@+id/confirm_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="Ok"
        android:background="@drawable/unos_button_shape"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarm_fragment_timePicker"
        app:layout_constraintVertical_bias="0.571" />

</android.support.constraint.ConstraintLayout>