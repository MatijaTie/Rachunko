<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/alarm_border"

    android:padding="0dp"
    android:layout_height="70dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="5dp">
    <android.support.constraint.ConstraintLayout
        android:paddingRight="0dp"

        android:layout_marginRight="0dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/alarm_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/menu"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/alarm_text_view"
            android:maxWidth="158dp"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/alarm_date_view"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toRightOf="@+id/alarm_image_view"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/alarm_title_view"
            app:layout_constraintVertical_bias="0.571" />

        <TextView
            android:id="@+id/alarm_title_view"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:text="TextView"
            android:textSize="22dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/alarm_image_view"
            android:layout_marginLeft="16dp"
            app:layout_constraintRight_toLeftOf="@+id/alarm_date_view"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/alarm_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/alarm_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/alarm_date_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />
    </android.support.constraint.ConstraintLayout>>


</LinearLayout>
