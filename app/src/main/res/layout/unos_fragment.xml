<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matija.myapplication.Activity.MenuActivity">

    <DatePicker
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:id="@+id/datePicker"
        android:layout_width="308dp"
        android:layout_height="168dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="162dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="163dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/radioGroup"
        android:layout_marginStart="8dp">

        <RadioButton
            android:id="@+id/rbHrana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hrana"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="148dp" />

        <RadioButton
            android:id="@+id/rbHigijena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Higijena"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="111dp" />

        <RadioButton
            android:id="@+id/rbPotrepstine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Potrepštine"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="111dp" />


        <RadioButton
            android:id="@+id/rbRezije"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Režije"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="148dp" />


        <RadioButton
            android:id="@+id/rbOstalo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ostalo"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="180dp" />




    </RadioGroup>

    <EditText
        android:id="@+id/etNaziv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:hint="Naziv"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/radioGroup"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <EditText
        android:id="@+id/etCijena"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Cijena"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNaziv"
        app:layout_constraintLeft_toRightOf="@+id/radioGroup"
        android:layout_marginLeft="24dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toTopOf="@+id/datePicker"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/unos_button_shape"
        android:textColor="#FFFFFFFF"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Unesi"
        android:windowSoftInputMode="adjustNothing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
